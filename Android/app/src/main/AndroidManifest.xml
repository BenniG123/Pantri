<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prodigy.pantri">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.PantriApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_pantrilogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ViewRecipesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="prodigy.pantri.ViewRecipesActivity" />
        </activity>
        <activity
            android:name=".RecipeActivity"
            android:label="@string/title_activity_recipe"
            android:parentActivityName=".ViewRecipesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewRecipesActivity" />
        </activity>
        <activity
            android:name=".ViewRecipesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewFoodActivity" />
        <activity
            android:name=".ViewPantryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShoppingListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".FoodSearchActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>